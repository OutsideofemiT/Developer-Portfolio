# Example environment variables for Server (do NOT commit real secrets)
# Copy this file to .env and fill the values locally

# OpenAI
OPENAI_API_KEY=sk-REPLACE_WITH_YOUR_KEY
OPENAI_MODEL=gpt-3.5-turbo

# Server
PORT=5000

# SMTP settings (for emailing replies)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false # true for port 465
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-pass

EMAIL_FROM="Your Bot <bot@example.com>"
DEFAULT_EMAIL_TO=you@example.com
ALLOW_EMAILS=false # set to 'true' to enable emailing
